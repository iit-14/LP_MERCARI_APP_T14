<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BFEFDF"
            android:padding="8dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aman Vij"
                android:textColor="#0096D1"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/p1" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Profession"
                android:textColor="#0096D1"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/p2"
                app:layout_constraintTop_toTopOf="@id/p2" />

            <TextView
                android:id="@+id/profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General Physician"
                android:textColor="#0096D1"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="@+id/p2"
                app:layout_constraintTop_toTopOf="@+id/p2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/p3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Degree"
                android:textColor="#0096D1"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/p3"
                app:layout_constraintTop_toTopOf="@id/p3" />

            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MBBS"
                android:textColor="#0096D1"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="@+id/p3"
                app:layout_constraintTop_toTopOf="@id/p3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/p4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Experience"
                android:textColor="#0096D1"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/p4"
                app:layout_constraintTop_toTopOf="@id/p4" />

            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9yrs"
                android:textColor="#0096D1"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="@+id/p4"
                app:layout_constraintTop_toTopOf="@id/p4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/p5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Phone"
                android:textColor="#0096D1"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@+id/p5"
                app:layout_constraintTop_toTopOf="@id/p5" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123456789"
                android:textColor="#0096D1"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="@+id/p5"
                app:layout_constraintTop_toTopOf="@id/p5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
